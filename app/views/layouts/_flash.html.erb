<% if notice %>
  <div class='flash'>
    <div class="alert alert-info"><%= notice %>
       <button type="button" class="close" data-dismiss="alert"></button>
     </div>
  </div>
<% elsif alert %>
  <div class='flash'>
     <div class="alert alert-danger"><%= alert %>
       <button type="button" class="close" data-dismiss="alert">&times;</button>
     </div>
  </div>
<% end %>
