
<div class='sign_up_wrapper'>
  <div class='form_wrapper'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <h2 class="login_title text-center">Chatにログイン</h2>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: 'form-control' %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'パスワード', class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-info new_user_btn" %>
      </div>
    <% end %>

<%= render "users/shared/links" %>
  </div>
  <div class='image-wrapper'>
    <img class='regiration' src="/registrations_view.png">
  </div>
</div>
